<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_result"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:background="#62626262"
    android:orientation="vertical"
    tools:context="io.github.timladenov.euquizz.ResultActivity">

    <TextView
        android:id="@+id/resultsHeader"
        android:layout_width="match_parent"
        android:layout_height="@dimen/OdpHeight"
        android:layout_weight="@dimen/weight"
        android:alpha="@dimen/alpha"
        android:background="@color/colorForeground"
        android:fontFamily="sans-serif"
        android:gravity="center"
        android:text="@string/resultHeader"
        android:textAlignment="center"
        android:textColor="@color/primaryTxtColor"
        android:textSize="@dimen/capitalText"
        android:textStyle="bold"
        android:layout_marginBottom="@dimen/activity_vertical_margin"/>

    <TextView
        android:id="@+id/showRes"
        android:layout_width="match_parent"
        android:layout_height="@dimen/OdpHeight"
        android:layout_weight="@dimen/weight"
        android:alpha="@dimen/alpha"
        android:background="@color/colorForeground"
        android:fontFamily="sans-serif"
        android:gravity="center"
        android:text="@string/showResult"
        android:textAlignment="center"
        android:textColor="@color/primaryTxtColor"
        android:textSize="@dimen/middleText"
        android:textStyle="normal"
        android:layout_marginBottom="@dimen/activity_vertical_margin"/>

    <TextView
        android:id="@+id/resultWindow2"
        android:layout_width="match_parent"
        android:layout_height="@dimen/OdpHeight"
        android:layout_weight="@dimen/weight"
        android:alpha="@dimen/alpha"
        android:background="@color/colorForeground"
        android:fontFamily="sans-serif"
        android:gravity="center"
        android:text="@string/resultPoints"
        android:textAlignment="center"
        android:textColor="@color/primaryTxtColor"
        android:textSize="@dimen/middleText"
        android:textStyle="normal"
        android:layout_marginBottom="@dimen/activity_vertical_margin"/>

</LinearLayout>
